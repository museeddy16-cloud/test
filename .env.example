# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/iruvoyage?schema=public

# JWT Authentication
JWT_SECRET=your-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=5d

# Server
PORT=3000
NODE_ENV=development

# Frontend URL (for CORS and email links)
APP_URL=http://localhost:5000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=IRU Voyage <noreply@iruvoyage.com>

# Stripe Payment (for credit card payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# MTN Mobile Money (for MTN MoMo payments)
MTN_MOMO_API_KEY=your_mtn_api_key
MTN_MOMO_USER_ID=your_mtn_user_id
MTN_MOMO_ENVIRONMENT=sandbox
MTN_MOMO_CALLBACK_URL=https://yourapp.com/api/payments/webhook/mtn

# Airtel Money (for Airtel Money payments)
AIRTEL_API_KEY=your_airtel_api_key
AIRTEL_CLIENT_ID=your_airtel_client_id
AIRTEL_CLIENT_SECRET=your_airtel_client_secret
AIRTEL_ENVIRONMENT=sandbox
AIRTEL_CALLBACK_URL=https://yourapp.com/api/payments/webhook/airtel

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Google Maps (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
